<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eardream.domain.user.mapper.UserMapper">

    <!-- MyBatis Alias를 사용하여 resultMap 대신 resultType 사용 -->

    <!-- 공통 컬럼 정의 -->
    <sql id="userColumns">
        id, kakao_id, name, phone_number, profile_image_url, birth_date, address, created_at, updated_at
    </sql>

    <!-- 사용자 생성 -->
    <insert id="insertUser" parameterType="User" 
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO users (
            kakao_id, name, phone_number, profile_image_url, birth_date, address, created_at, updated_at
        ) VALUES (
            #{kakaoId},
            #{name},
            #{phoneNumber},
            #{profileImageUrl},
            #{birthDate},
            #{address},
            #{createdAt},
            #{updatedAt}
        )
    </insert>

    <!-- ID로 사용자 조회 -->
    <select id="findById" parameterType="long" resultType="User">
        SELECT <include refid="userColumns"/>
        FROM users
        WHERE id = #{id}
    </select>

    <!-- Kakao ID로 사용자 조회 -->
    <select id="findByKakaoId" parameterType="string" resultType="User">
        SELECT <include refid="userColumns"/>
        FROM users
        WHERE kakao_id = #{kakaoId}
    </select>

    <!-- 전화번호로 사용자 조회 -->
    <select id="findByPhoneNumber" parameterType="string" resultType="User">
        SELECT <include refid="userColumns"/>
        FROM users
        WHERE phone_number = #{phoneNumber}
    </select>

    <!-- 사용자 유형별 사용자 목록 조회 -->
    <!-- Removed findByUserType: user_type no longer used -->

    <!-- 가족 리더 목록 조회 -->
    <select id="findFamilyLeaders" resultType="User">
        SELECT <include refid="userColumns"/>
        FROM users u
        WHERE EXISTS (
            SELECT 1 FROM family_members fm
            WHERE fm.user_id = u.id AND fm.role = 'LEADER'
        )
        ORDER BY created_at DESC
    </select>

    <!-- 소식지 수신자 목록 조회 -->
    <select id="findNewsletterReceivers" resultType="User">
        SELECT <include refid="userColumns"/>
        FROM users u
        WHERE EXISTS (
            SELECT 1 FROM family_members fm WHERE fm.user_id = u.id
        )
        ORDER BY created_at DESC
    </select>

    <!-- 사용자 정보 수정 -->
    <update id="updateUser" parameterType="User">
        UPDATE users SET
            name = #{name},
            phone_number = #{phoneNumber},
            profile_image_url = #{profileImageUrl},
            birth_date = #{birthDate},
            address = #{address},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <!-- 사용자 리더 권한 변경 -->
    <update id="updateLeaderStatus">
        UPDATE users SET
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <!-- 사용자 수신자 상태 변경 -->
    <update id="updateReceiverStatus">
        UPDATE users SET
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <!-- 사용자 삭제 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <!-- 전체 사용자 수 조회 -->
    <select id="countUsers" resultType="int">
        SELECT COUNT(*) FROM users
    </select>

    <!-- 사용자 유형별 수 조회 -->
    <!-- Removed countByUserType: user_type no longer used -->

    <!-- 사용자 존재 여부 확인 - Kakao ID -->
    <select id="existsByKakaoId" parameterType="string" resultType="int">
        SELECT COUNT(*) FROM users WHERE kakao_id = #{kakaoId}
    </select>

    <!-- 사용자 존재 여부 확인 - 전화번호 -->
    <select id="existsByPhoneNumber" parameterType="string" resultType="int">
        SELECT COUNT(*) FROM users WHERE phone_number = #{phoneNumber}
    </select>

    <!-- 최근 생성된 사용자 목록 조회 -->
    <select id="findRecentUsers" resultType="User">
        SELECT <include refid="userColumns"/>
        FROM users
        ORDER BY created_at DESC
        <if test="limit > 0">
            ROWNUM &lt;= #{limit}
        </if>
    </select>

</mapper>